


 
<% if current_user %>
    
    <div class="row">
        <div class="col-md-12 text-center">             
            <%= render partial:"shared/profile" %>
        </div>
   </div>
   <br/>
   <br/>
    <div class="row">
        <div class="col-md-10">
            <h1>Home Page</h1></div>
        <div class="col-md-2">  
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete , class: "btn btn-danger"%>    
        </div>
    </div>    
    <div class="row">
        <div class="col-md-12">
        </div>
    </div>
<% else %>
    <div class="row">
        <div class="col-md-12 text-center">             
            <%= render partial:"shared/profile" %>
        </div>
   </div>
   <br/>
   <br/>
    <div class="row">
        <div class="col-md-10">
            <h1>Please Sign In / Sign up to see the updates</h1></div>
        <div class="col-md-2">  
            <%= link_to "Sign In", new_user_session_path, class: "btn btn-info" %>
            <%= link_to  "Sign Up", new_user_registration_path, class: "btn btn-success"%>  
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
        </div>
    </div>
<% end %>  